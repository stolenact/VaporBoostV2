{
  "name": "vaporbooster",
  "version": "3.0.0",
  "description": "Advanced Steam Hour Booster - Secure, production-ready with encryption, rate limiting, and comprehensive monitoring",
  "main": "src/accountHandler.js",
  "scripts": {
    "start": "node src/accountHandler.js",
    "dev": "NODE_ENV=development node --watch src/accountHandler.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js",
    "clean": "node scripts/clean.js",
    "clean:logs": "rm -rf logs/*.log",
    "clean:data": "rm -rf accounts_data/*",
    "setup": "node scripts/setup.js",
    "validate": "npm run lint && npm run format:check && npm test",
    "precommit": "npm run lint:fix && npm run format",
    "prepare": "husky install"
  },
  "keywords": [
    "steam",
    "booster",
    "hours",
    "gaming",
    "idle",
    "automation",
    "2fa",
    "invisible-mode"
  ],
  "author": "stolenact <realzqpwi@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stolenact/VaporBooster.git"
  },
  "bugs": {
    "url": "https://github.com/stolenact/VaporBooster/issues"
  },
  "homepage": "https://github.com/stolenact/VaporBooster#readme",
  "dependencies": {
    "easytimer.js": "^4.5.4",
    "readline-sync": "^1.4.10",
    "steam-totp": "^2.1.2",
    "steam-user": "^5.0.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "utils/**/*.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}